{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "outDir": ".dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",
    "**/**/*.ts",
    "**/**/**/*.ts",
    "**/**/**/*.ts",
    "**/**/**/**/*.ts",
    "**/**/**/**/**/*.ts"
  ],
  "exclude": [".dist", "node_modules", "types"]
}
